{
    "compilerOptions": {
      "target": "es6",
      "module": "NodeNext",
      "baseUrl": "./src",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "NodeNext",
      "forceConsistentCasingInFileNames": true,
      // "skipLibCheck": true,
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": ["src/**/*.ts", "src/utils/supabase/server.js", "src/utils/supabase/client.js", "database.types.ts"],
    "exclude": ["node_modules"],
    "lib": ["esnext"]
}